on right click:
    if event-block is end portal frame:
        if name of event-player's tool is "&2Summoning Eye":
            if event-block is end portal frame[eye=true]:
                add 1 to {seyes}
                add event-player to {placedspiders::*}
                cancel event
            if {seyes} > 9.1:
                set {seyes} to 1
            broadcast "&2%event-player% just placed a &lSummoning Eye&2! %{seyes}%/9 placed!"
            if {seyes} = 9:
                loop {spiderresetblocks::*}:
                    set {_i} to location of loop-value
                    set block at {_i} to end portal frame[eye=false]
                    strike lightning at {_i}
                    draw 20 of dust using dustOption(red, 10) at location above {_i}
                set {_cacoon} to random element out of {placedspiders::*}
                set {cacooned::%{_cacoon}%} to {_cacoon}
                loop {spiderresetblocks::*}:
                    set {_i} to location of loop-value
                    draw 20 of dust using dustOption(red, 10) at location above {_i}
                wait 2 seconds
                broadcast "&2Bergmönch's web seems empty..."
                loop {spiderresetblocks::*}:
                    set {_i} to location of loop-value
                    draw 20 of dust using dustOption(red, 10) at location above {_i}
                wait 2 seconds
                broadcast "&2 Oh you look filling, %{_cacoon}%!"
                loop {spiderresetblocks::*}:
                    set {_i} to location of loop-value
                    draw 20 of dust using dustOption(red, 10) at location above {_i}
                wait 2 seconds
                broadcast "&2Yes! %{_cacoon}% You are my dinner!"
                loop {spiderresetblocks::*}:
                    set {_i} to location of loop-value
                    draw 20 of dust using dustOption(red, 10) at location above {_i}
                loop {cacoon::*}:
                    set {_sc} to location of loop-value
                    teleport {cacooned::%player%} to {_sc}
                    wait 1 seconds
                loop {cacoon1::*}:
                    set {_c1} to location of loop-value
                    set block at {_c1} to air
                    wait 1 seconds
                make {cacooned::%player%} run command "mm m spawn Bergmönch" as op
                wait 1 seconds
                loop {cacoon1::*}:
                    set {_c1} to location of loop-value
                    set block at {_c1} to white stained glass
                clear {placedspiders::*}
command /clearlistspider [<text>]:
    permission: op
    trigger:
        if arg is not set:
            send "You must provide a list."
        if arg is "cacoon":
            clear {cacoon::*}
            send "You have cleared the Sacrifice tp blocks"
        if arg is "spiderreset":
            clear {spiderresetblocks::*}
            send "You have cleared the reset blocks"
